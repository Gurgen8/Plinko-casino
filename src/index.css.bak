@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap');

:root {
  --bg-color: #0F172A;
  --bg-gradient: radial-gradient(circle at top, #1e293b, #0F172A);
  --panel-bg: rgba(30, 41, 59, 0.7);
  --glass-border: 1px solid rgba(255, 255, 255, 0.1);
  --primary-color: #6366F1;
  --accent-color: #F43F5E;
  --text-primary: #F8FAFC;
  --text-secondary: #94A3B8;
  --win-color: #10B981;
  --loss-color: #64748B;
  
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -2px rgba(0, 0, 0, 0.3);
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Outfit', sans-serif;
  background: var(--bg-color);
  background-image: var(--bg-gradient);
  color: var(--text-primary);
  min-height: 100vh;
  overflow: hidden; /* Prevent scroll on game */
}

.app-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
}

.app-header {
  text-align: center;
  padding-bottom: 20px;
}

.app-header h1 {
  font-weight: 800;
  font-size: 2.5rem;
  letter-spacing: -1px;
  text-transform: uppercase;
}

.highlight {
  color: var(--accent-color);
  text-shadow: 0 0 20px rgba(244, 63, 94, 0.5);
}

.game-layout {
  display: flex;
  flex: 1;
  gap: 20px;
  align-items: flex-start;
  justify-content: center;
  height: calc(100% - 80px);
}

/* Panels */
.side-panel {
  flex: 1;
  background: var(--panel-bg);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: var(--glass-border);
  border-radius: 16px;
  padding: 24px;
  height: 100%;
  max-width: 350px;
  box-shadow: var(--shadow-lg);
  display: flex;
  flex-direction: column;
}

.center-panel, .game-board-container {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  position: relative;
}

/* Canvas */
.game-board {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.plinko-canvas {
  max-height: 100%;
  max-width: 100%;
  border-radius: 8px;
  /* box-shadow: 0 0 50px rgba(99, 102, 241, 0.1); */
}

/* Controls */
.controls-panel {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.balance-display {
  background: rgba(15, 23, 42, 0.6);
  padding: 16px;
  border-radius: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid rgba(255,255,255,0.05);
}

.balance-display .label {
  color: var(--text-secondary);
  font-weight: 600;
  text-transform: uppercase;
  font-size: 0.85rem;
}

.balance-display .value {
  color: var(--win-color);
  font-size: 1.5rem;
  font-weight: 800;
  text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
}

.bet-control label {
  display: block;
  margin-bottom: 8px;
  color: var(--text-secondary);
  font-size: 0.9rem;
  font-weight: 600;
}

.input-row {
  display: flex;
  gap: 8px;
}

.input-row input {
  flex: 1;
  background: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  padding: 12px;
  border-radius: 8px;
  color: white;
  font-family: inherit;
  font-weight: 600;
  font-size: 1rem;
}

.input-row input:focus {
  outline: none;
  border-color: var(--primary-color);
}

.multiplier-btn {
  background: rgba(255, 255, 255, 0.1);
  border: none;
  color: white;
  padding: 0 16px;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.2s;
}

.multiplier-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}

.drop-button {
  width: 100%;
  padding: 18px;
  margin-top: auto;
  border: none;
  border-radius: 12px;
  background: linear-gradient(135deg, #F43F5E 0%, #F97316 100%);
  color: white;
  font-family: inherit;
  font-weight: 800;
  font-size: 1.2rem;
  cursor: pointer;
  transition: transform 0.1s, box-shadow 0.2s;
  box-shadow: 0 10px 20px rgba(244, 63, 94, 0.4);
}

.drop-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 15px 25px rgba(244, 63, 94, 0.5);
}

.drop-button:active:not(:disabled) {
  transform: scale(0.98);
}

.drop-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  filter: grayscale(1);
}

/* History */
.history-panel h3 {
  margin-bottom: 20px;
  font-size: 1.1rem;
  color: var(--text-secondary);
  text-transform: uppercase;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.history-item {
  display: flex;
  justify-content: space-between;
  padding: 12px;
  background: rgba(0,0,0,0.2);
  border-radius: 8px;
  font-weight: 600;
  border-left: 4px solid transparent;
}

.history-item.win {
  border-left-color: var(--win-color);
}
.history-item.loss {
  border-left-color: var(--loss-color);
}

.multiplier-badge {
  background: rgba(255, 255, 255, 0.1);
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 0.9rem;
}

.no-history {
  text-align: center;
  color: var(--text-secondary);
  opacity: 0.5;
  margin-top: 20px;
}

/* Responsive */
@media (max-width: 1024px) {
  .game-layout {
    flex-direction: column;
    height: auto;
    align-items: center;
  }
  
  .side-panel {
    width: 100%;
    max-width: 600px;
  }
  
  .game-board {
    height: 60vh;
  }
  
  body {
    overflow-y: auto;
  }
}
